<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="css/play_style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<body>
    
    <h1 id = "game"><a href="/">konek.io</a></h1>

    <h2 id = "round-count">Round: 1</h2>

    <h1 id = "timer"></h1>

    <h2 id = "player-name">Player: <%= player_name %> </h2>
    
    <h1 id = "btm-title">wəːdsmɪθ;</h1>

    <div class="line"></div>

    <div class="start-box">
        <h1 id="start">Start</h1>
        <h2 id="start-word"><%= word1 %></h2>

    </div>

    <div class="end-box">
        <h1 id="end">End</h1>
        <h2 id="end-word"><%= word2 %></h2>

    </div>

    
    <h3 id = "path-text">Your path so far: </h3>
    

    <div id= "path-container"></div>

    <h1 id="next">Your Next Word:</h1>
    <input id="next-word-input" type="text">
    <input id="submit" type="text" onclick="add_to_path()">
 
    <a href="check"><button id = "next-button" onclick="">Submit</button></a>

    <script src = "scripts/play_page.js"></script>
    <script>

        var timerLimit1 = 15;
        var timer = setInterval(timerDecrease, 1000);
    
        function timerDecrease() {
            timerLimit1--;
            document.getElementById('timer').innerHTML = ("0"+timerLimit1).slice(-2);
        }
        var timer_stop = setTimeout(cancelTimer, timerLimit1*1000);
        function cancelTimer() {
            clearInterval(timer);

            setTimeout(section2, 5000)
        }
        
        function section2() {
            timer = setInterval(timerIncrease, 1000) 
        }
        function timerIncrease() {
            timerLimit1++;
            document.getElementById('timer').innerHTML = ("0"+timerLimit1).slice(-2);
        }

    </script>

</body>
</html>
